<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Vehicle Details</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <% if (! edit) { %>
      <form action="/vehicles/new" class="row" method="POST">
      <% } else { %>
      <form action='<%= "/vehicles/edit/" + vehicle._id  %> ' class="row" method="POST">
      <% } %>
        <div class="form-group col-4">
          <label>Unique Vehicle Number</label>
          <input value='<%= vehicle.vehicle_number %>' type="text" class="form-control" name="vehicle_number" required>
        </div>
        <div class="form-group col-4">
          <label>Engine Number</label>
          <input value='<%= vehicle.engine_no %>' type="text" class="form-control" name="engine_no" required>
        </div>
        <div class="form-group col-4">
          <label>Vehicle Plate Number</label>
          <input value='<%= vehicle.vehicle_plate_number %>' type="text" class="form-control" name="vehicle_plate_number">
        </div>
        <div class="form-group col-4">
          <label>Vehicle Model</label>
          <input value='<%= vehicle.vehicle_model %>' type="text" class="form-control" name="vehicle_model" required>
        </div>
        <div class="form-group col-4">
          <label>Vehicle Capacity</label>
          <input value='<%= vehicle.capacity %>' type="number" class="form-control" name="capacity">
        </div>
        <div class="form-group col-4">
          <label>Vehicle Type</label>
          <select required class="form-control" name="vehicle_type">
            <option></option>
            <option value="Bus">Bus</option>
            <option value="Car">Car</option>
            <option value="Van">Van</option>
          </select>
        </div>
        <div class="form-group col-4">
          <label>Body Paint Color</label>
          <input value='<%= vehicle.color %>' type="text" class="form-control" name="color">
        </div>
        <div class="col-12"></div>
        <div class="col-4 offset-4">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>

  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>