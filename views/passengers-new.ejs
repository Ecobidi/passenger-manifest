<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Passenger Details</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
    </div>
  <% if (! edit) { %>
    <div class="col-12">
      <form action="/passengers/new" class="row" method="POST">
        <div class="form-group col-12">
          <label>Manifest Information</label>
          <select name="manifest" class="form-control" required>
            <option></option>
            <% manifests.forEach(m => { %>
            <option value='<%= m._id %>'><%= m.vehicle.vehicle_number + " scheduled to depart for " + m.destination + " by " + m.departure_time + " on " + m.departure_date %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-4">
          <label>Surname</label>
          <input type="text" class="form-control" name="last_name" required>
        </div>
        <div class="form-group col-4">
          <label>First Name</label>
          <input type="text" class="form-control" name="first_name" required>
        </div>
        <div class="form-group col-4">
          <label>Middle Name</label>
          <input type="text" class="form-control" name="middle_name">
        </div>
        <div class="form-group col-4">
          <label>Mobile Phone No.</label>
          <input type="text" class="form-control" name="phone">
        </div>
        <div class="form-group col-4">
          <label>Address</label>
          <input type="text" class="form-control" name="address" required>
        </div>
        <div class="form-group col-4">
          <label>Blood Group</label>
          <input type="text" class="form-control" name="blood_group">
        </div>
        <div class="form-group col-6">
          <label>Name of Next of Kin</label>
          <input type="text" class="form-control" name="next_of_kin_name">
        </div>
        <div class="form-group col-4">
          <label>Next of Kin's Mobile Contact</label>
          <input type="text" class="form-control" name="next_of_kin_contact">
        </div>
        <div class="col-4 offset-4">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
  <% } %>
  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>