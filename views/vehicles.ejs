<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Vehicles</h3>
      <div>
        <a href="/vehicles/new" class="btn btn-primary">Add new vehicle</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div class="col-12">
      <div>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/vehicles?" class="form-inline">
        <div class="form-group mb-4 mr-2">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by vehicle number ...">
        </div>
        <div class="form-group mb-4">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Vehicle</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <th>Vehicle Number</th>
            <th>Plate Number</th>
            <th>Engine Number</th>
            <th>Vehicle Type</th>
            <th>Capacity</th>
            <th>Body Paint</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% vehicles.forEach((m) => { %>
            <tr>
              <td><small><%= m.vehicle_number %></small></td>
              <td><small><%= m.vehicle_plate_number %></small></td>
              <td><small><%= m.engine_no %></small></td>
              <td><small><%= m.vehicle_type %></small></td>
              <td><small><%= m.capacity %></small></td>
              <td><small><%= m.color %></small></td>
              <% /* %>
              <td>
                <a href='<%= "/vehicles/view/" + m._id %>' class="btn btn-sm btn-primary">View</a>
              </td>
              <% */ %>
              <td>
                <a href='<%= "/vehicles/remove/" + m._id %>' class="btn btn-sm btn-outline-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>